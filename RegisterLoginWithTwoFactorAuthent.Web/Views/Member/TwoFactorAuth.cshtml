@{
	ViewData["Title"] = "Index";
}
@model AuthenticatorViewModel

<h1>2FA Setting Edit</h1>
<br />
<br />

<div class="row">
	<div class="col-md-12">
		<form asp-action="TwoFactorAuth" method="post">
			<div class="form-group">
				<label asp-for="TwoFactorType" class="form-label col-md-4"></label>
				<br />
				<select class="form-control" asp-for="TwoFactorType" asp-items="@Html.GetEnumSelectList<TwoFactor>()"></select>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Düzəlt" class="btn btn-success"/>
			</div>
		</form>
	</div>

	@if (ViewBag.warning != null)
	{
		<div class="col-md-12">
			<div class="alert alert-warning">
				@ViewBag.warning
			</div>
		</div>
		
	}

	@if (TempData["message"] != null)
	{
		<div class="col-md-12">
			<br />
			<div class="alert alert-info">
				@TempData["message"]
			</div>
		</div>

	}

	@if (TempData["recoveryCodes"] != null)
	{
		<div class="col-md-12">
			<div class="alert alert-info">
				Aşağıdakı kodları təhlükəsiz bir yerdə saxlayın. Microsoft/Google Authenticator proqramı işləmədikdə bu recovery kodlarını istifadə edə bilərsiniz.
			</div>

			<div class="alert alert-secondary">
				@foreach (var item in TempData["recoveryCodes"] as string[])
				{
					<strong>@item</strong>
				}
			</div>
		</div>
	}
</div>